include ../../components/form-order-card/form-order-card

mixin form-order(params={})
  -
    const {
      textHeading= "",
      textInputSelect= "",
      valueSelect1= "",
      valueSelect2= "",
      textInputRange= "",
      textInputTextArea= "",
      textInputTextName= "",
      textInputTel= "",
    } = params;
  
  .form-order
    .form-order__container
      h2.form-order__heading= textHeading
      form.form-order__form(action="#" oninput="fuelOutput.value=fuelCount.value")
        fieldset.form-order__fieldset
          .form-order__input-block
            p.form-order__name-input= textInputSelect
            select.form-order__select(name="select-fuel")
              option.form-order__option(value=valueSelect1)= valueSelect1
              option.form-order__option(value=valueSelect2)= valueSelect2
          .form-order__input-block.form-order__input-block_range
            p.form-order__name-input= textInputRange
            output.form-order__output(name= "fuelOutput") 1670 литров
            label.form-order__label.form-order__label_range
              input.form-order__range(
                type="range",
                name="fuelCount",
                min= "1",
                max= "10000",
                value="1670",
                step= "3000"
              )
          .form-order__input-block
            p.form-order__name-input= textInputTextArea
            label.form-order__label
              input.form-order__input(
                type="text",
                name="area",
                placeholder="Укажите место",
                pattern="^[А-Яа-яЁё\s]+$",
                required
              )
          .form-order__input-block
            p.form-order__name-input= textInputTextName
            label.form-order__label
              input.form-order__input(
                type="text",
                name="name",
                placeholder="Иван",
                pattern="^[А-Яа-яЁё\s]+$",
                required
              )
          .form-order__input-block
            p.form-order__name-input= textInputTel
            label.form-order__label
              input.form-order__input(
                type="tel",
                name= "phone",
                placeholder= "+7 (___) ___-__-__",
                pattern="\+?[0-9\s\-\(\)]+",
                required
              )
        .form-order__card
          +form-order-card({
            cardTitle: "Итого",
            priceTitle: "Стоимость топлива",
            priceAmount: "77 350.00 ₽",
            costTitle: "Цена за литр:",
            costAmount: "45.50 ₽",
            costInfo: "Цена и стоимость указаны ориентировочно.<br>Точные цену и стоимость собщит наш менеджер при подтверждении заявки.",
            profitTitle: "Выгода:",
            profitAmount: "6 953.00 ₽",
            profitInfo: "При цене на АЗС &nbsp 49.59 ₽ за литр, цены актуальны на  23.11.2020 г. ",
            typeBtn: "submit",
            textBtn: "Заказать топливо",
          })

